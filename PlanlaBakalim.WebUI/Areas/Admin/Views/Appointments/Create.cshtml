@model PlanlaBakalim.Core.Entities.Appointment
@{
    ViewData["Title"] = "Yeni Randevu";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-calendar-plus"></i> Yeni Randevu</h2>
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Geri Dön
    </a>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="fas fa-plus"></i> Randevu Bilgileri
        </h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="UserId" class="form-label">Müşteri</label>
                        <select asp-for="UserId" class="form-select">
                            <option value="">Müşteri Seçin</option>
                            @foreach (var user in ViewBag.Users as IEnumerable<dynamic>)
                            {
                                <option value="@user.Id">@user.FullName (@user.Email)</option>
                            }
                        </select>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="BusinessId" class="form-label">İşletme</label>
                        <select asp-for="BusinessId" class="form-select" required>
                            <option value="">İşletme Seçin</option>
                            @foreach (var business in ViewBag.Businesses as IEnumerable<dynamic>)
                            {
                                <option value="@business.Id">@business.Name</option>
                            }
                        </select>
                        <span asp-validation-for="BusinessId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="EmployeeId" class="form-label">Çalışan</label>
                        <select asp-for="EmployeeId" class="form-select">
                            <option value="">Çalışan Seçin</option>
                            @foreach (var employee in ViewBag.Employees as IEnumerable<dynamic>)
                            {
                                <option value="@employee.Id">@employee.Name</option>
                            }
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Status" class="form-label">Durum</label>
                        <select asp-for="Status" class="form-select">
                            <option value="@PlanlaBakalim.Core.Enums.AppointmentStatus.Pending">Beklemede</option>
                            <option value="@PlanlaBakalim.Core.Enums.AppointmentStatus.Confirmed">Onaylandı</option>
                            <option value="@PlanlaBakalim.Core.Enums.AppointmentStatus.Cancelled">İptal</option>
                            <option value="@PlanlaBakalim.Core.Enums.AppointmentStatus.Completed">Tamamlandı</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="AppointmentDate" class="form-label">Randevu Tarihi</label>
                        <input asp-for="AppointmentDate" type="date" class="form-control" required />
                        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="AppointmentTime" class="form-label">Randevu Saati</label>
                        <input asp-for="AppointmentTime" type="time" class="form-control" required />
                        <span asp-validation-for="AppointmentTime" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="GuestFullName" class="form-label">Misafir Ad Soyad</label>
                        <input asp-for="GuestFullName" class="form-control" placeholder="Misafir adı soyadı" />
                        <span asp-validation-for="GuestFullName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="GuestEmail" class="form-label">Misafir E-posta</label>
                        <input asp-for="GuestEmail" type="email" class="form-control" placeholder="misafir@email.com" />
                        <span asp-validation-for="GuestEmail" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="mb-3">
                <label asp-for="Note" class="form-label">Not</label>
                <textarea asp-for="Note" class="form-control" rows="3" placeholder="Randevu notları..."></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            
            <div class="d-flex justify-content-end">
                <a href="@Url.Action("Index")" class="btn btn-secondary me-2">
                    <i class="fas fa-times"></i> İptal
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
