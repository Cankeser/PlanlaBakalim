@model PlanlaBakalim.Core.Entities.Category
@{
    ViewData["Title"] = "Yeni Kategori";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-tags"></i> Yeni Kategori</h2>
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Geri Dön
    </a>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="fas fa-plus"></i> Kategori Bilgileri
        </h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Kategori Adı</label>
                        <input asp-for="Name" class="form-control" placeholder="Kategori adını girin" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ParentId" class="form-label">Üst Kategori</label>
                        <select asp-for="ParentId" class="form-select">
                            <option value="">Ana Kategori</option>
                            @foreach (var parentCategory in ViewBag.ParentCategories as List<PlanlaBakalim.Core.Entities.Category>)
                            {
                                <option value="@parentCategory.Id">@parentCategory.Name</option>
                            }
                        </select>
                        <span asp-validation-for="ParentId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Açıklama</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Kategori açıklaması..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="OrderNo" class="form-label">Sıra Numarası</label>
                        <input asp-for="OrderNo" class="form-control" type="number" value="0" />
                        <span asp-validation-for="OrderNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <div class="form-check mt-4">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked>
                            <label asp-for="IsActive" class="form-check-label">
                                Aktif
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="d-flex justify-content-end">
                <a href="@Url.Action("Index")" class="btn btn-secondary me-2">
                    <i class="fas fa-times"></i> İptal
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
