@model PlanlaBakalim.Core.Entities.City
@{
    ViewData["Title"] = "Yeni İl";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-map-marker-alt"></i> Yeni İl</h2>
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Geri Dön
    </a>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="fas fa-plus"></i> İl Bilgileri
        </h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">İl Adı</label>
                        <input asp-for="Name" class="form-control" placeholder="İl adını girin" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="d-flex justify-content-end">
                <a href="@Url.Action("Index")" class="btn btn-secondary me-2">
                    <i class="fas fa-times"></i> İptal
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle"></i> Bilgi
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h6><i class="fas fa-lightbulb"></i> Önemli Notlar:</h6>
                    <ul class="mb-0">
                        <li>İl adı benzersiz olmalıdır</li>
                        <li>İl oluşturulduktan sonra ilçeler ekleyebilirsiniz</li>
                        <li>İl silmek için önce tüm ilçeleri silmeniz gerekir</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
