@model PlanlaBakalim.Core.Entities.City
@{
    ViewData["Title"] = "İl Detayları";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-map-marker-alt"></i> @Model.Name</h2>
    <div>
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
            <i class="fas fa-edit"></i> Düzenle
        </a>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Geri Dön
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle"></i> İl Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">İl Adı</label>
                            <p class="form-control-plaintext">@Model.Name</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Oluşturulma Tarihi</label>
                            <p class="form-control-plaintext">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-bar"></i> İstatistikler
                </h5>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div class="h2 text-primary">@Model.Districts.Count</div>
                    <p class="text-muted">Toplam İlçe</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-building"></i> İlçeler (@Model.Districts.Count)
                    </h5>
                    <a href="@Url.Action("Create", "Districts", new { area = "Admin", cityId = Model.Id })" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Yeni İlçe
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (Model.Districts.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>İlçe Adı</th>
                                    <th>Oluşturulma Tarihi</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var district in Model.Districts.OrderBy(d => d.Name))
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-building text-info me-2"></i>
                                                <span>@district.Name</span>
                                            </div>
                                        </td>
                                        <td>@district.CreatedDate.ToString("dd.MM.yyyy")</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Details", "Districts", new { area = "Admin", id = district.Id })" 
                                                   class="btn btn-sm btn-outline-primary" title="Detaylar">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", "Districts", new { area = "Admin", id = district.Id })" 
                                                   class="btn btn-sm btn-outline-warning" title="Düzenle">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-building fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Henüz ilçe bulunmuyor</h5>
                        <p class="text-muted">Bu ile ilçe eklemek için yukarıdaki butonu kullanın.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
