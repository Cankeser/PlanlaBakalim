@model IEnumerable<PlanlaBakalim.Core.Entities.District>
@{
    ViewData["Title"] = "İlçe Yönetimi";
}

@Html.AntiForgeryToken()

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-building"></i> İlçe Yönetimi</h2>
    <div>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni İlçe
        </a>
    </div>
</div>

<!-- Filtre -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="cityId" class="form-label">İl Filtresi</label>
                <select name="cityId" id="cityId" class="form-select">
                    <option value="">Tüm İller</option>
                    @foreach (var city in ViewBag.Cities as List<PlanlaBakalim.Core.Entities.City>)
                    {
                        <option value="@city.Id" selected="@(ViewBag.CityId?.ToString() == city.Id.ToString() ? "selected" : "")">@city.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <div>
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-filter"></i> Filtrele
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- İstatistik Kartları -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="stat-card primary">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-xs">Toplam İlçe</div>
                    <div class="h5">@Model.Count()</div>
                </div>
                <i class="fas fa-building stat-icon text-primary"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card success">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-xs">Filtrelenen İl</div>
                    <div class="h5">@(ViewBag.CityId != null ? "1" : "Tümü")</div>
                </div>
                <i class="fas fa-map-marker-alt stat-icon text-success"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card warning">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-xs">Bu Ay Eklenen</div>
                    <div class="h5">@Model.Count(d => d.CreatedDate.Month == DateTime.Now.Month)</div>
                </div>
                <i class="fas fa-calendar-plus stat-icon text-warning"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card danger">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-xs">İşletme Adresi</div>
                    <div class="h5">@Model.Sum(d => d.BusinessAdresses.Count)</div>
                </div>
                <i class="fas fa-store stat-icon text-danger"></i>
            </div>
        </div>
    </div>
</div>

<!-- İlçe Listesi -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="fas fa-list"></i> İlçe Listesi
        </h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-admin">
                <thead>
                    <tr>
                        <th>İlçe Adı</th>
                        <th>İl</th>
                        <th>İşletme Adresi</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var district in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-building text-info me-2"></i>
                                    <div>
                                        <div class="fw-bold">@district.Name</div>
                                        <small class="text-muted">ID: @district.Id</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-primary">@district.City.Name</span>
                            </td>
                            <td>
                                <span class="badge bg-info">@district.BusinessAdresses.Count</span>
                            </td>
                            <td>@district.CreatedDate.ToString("dd.MM.yyyy")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Details", "Districts", new { area = "Admin", id = district.Id })" 
                                       class="btn btn-sm btn-outline-primary" title="Detaylar">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", "Districts", new { area = "Admin", id = district.Id })" 
                                       class="btn btn-sm btn-outline-warning" title="Düzenle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button class="btn btn-sm btn-outline-danger" 
                                            onclick="deleteDistrict(@district.Id)" 
                                            title="Sil">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteDistrict(districtId) {
            const message = 'Bu ilçeyi silmek istediğinizden emin misiniz? Bu işlem geri alınamaz!';
            
            if (confirm(message)) {
                fetch(`@Url.Action("Delete", "Districts", new { area = "Admin" })/${districtId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        AdminPanel.showAlert(data.message || 'İşlem sırasında bir hata oluştu.', 'danger');
                    }
                })
                .catch(error => {
                    AdminPanel.showAlert('İşlem sırasında bir hata oluştu.', 'danger');
                });
            }
        }
    </script>
}

<!-- Pagination -->
@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Sayfa navigasyonu" class="mt-4">
        <ul class="pagination justify-content-center">
            <!-- Previous Page -->
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, pageSize = ViewBag.PageSize, cityId = ViewBag.CityId })">
                        <i class="fas fa-chevron-left"></i> Önceki
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">
                        <i class="fas fa-chevron-left"></i> Önceki
                    </span>
                </li>
            }

            <!-- Page Numbers -->
            @{
                int startPage = Math.Max(1, ViewBag.CurrentPage - 2);
                int endPage = Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2);
            }

            @if (startPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = 1, pageSize = ViewBag.PageSize, cityId = ViewBag.CityId })">1</a>
                </li>
                @if (startPage > 2)
                {
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                }
            }

            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize, cityId = ViewBag.CityId })">@i</a>
                </li>
            }

            @if (endPage < ViewBag.TotalPages)
            {
                @if (endPage < ViewBag.TotalPages - 1)
                {
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                }
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.TotalPages, pageSize = ViewBag.PageSize, cityId = ViewBag.CityId })">@ViewBag.TotalPages</a>
                </li>
            }

            <!-- Next Page -->
            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, pageSize = ViewBag.PageSize, cityId = ViewBag.CityId })">
                        Sonraki <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">
                        Sonraki <i class="fas fa-chevron-right"></i>
                    </span>
                </li>
            }
        </ul>
        
        <!-- Page Info -->
        <div class="text-center text-muted">
            <small>
                Sayfa @ViewBag.CurrentPage / @ViewBag.TotalPages 
                (@ViewBag.TotalCount toplam kayıt)
            </small>
        </div>
    </nav>
}
