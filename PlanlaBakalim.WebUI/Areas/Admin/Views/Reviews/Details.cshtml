@model PlanlaBakalim.Core.Entities.Review
@{
    ViewData["Title"] = "Yorum Detayları";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-comment"></i> Yorum Detayları</h2>
    <a href="@Url.Action("Index", "Reviews", new { area = "Admin" })" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Geri Dön
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-star text-warning"></i> @Model.Rating Yıldız
                    @if (Model.IsVisibleOnProfile)
                    {
                        <span class="badge bg-success ms-2">Görünür</span>
                    }
                    else
                    {
                        <span class="badge bg-warning ms-2">Gizli</span>
                    }
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6>Yorum:</h6>
                    <p class="border p-3 rounded bg-light">@Model.Comment</p>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <h6>Kullanıcı Bilgileri:</h6>
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-user me-2"></i>
                            <span>@Model.User.FullName</span>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-envelope me-2"></i>
                            <span>@Model.User.Email</span>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-phone me-2"></i>
                            <span>@Model.User.Phone</span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <h6>İşletme Bilgileri:</h6>
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-store me-2"></i>
                            <span>@Model.Business.Name</span>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-envelope me-2"></i>
                            <span>@Model.Business.Email</span>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-phone me-2"></i>
                            <span>@Model.Business.PhoneNumber</span>
                        </div>
                    </div>
                </div>
                
                <div class="mt-4">
                    <h6>Tarih Bilgileri:</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <small class="text-muted">Oluşturulma Tarihi:</small>
                            <div>@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-cogs"></i> İşlemler
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <button class="btn btn-@(Model.IsVisibleOnProfile ? "warning" : "success")" 
                            onclick="toggleReviewVisibility(@Model.Id, @Model.IsVisibleOnProfile.ToString().ToLower())">
                        <i class="fas fa-@(Model.IsVisibleOnProfile ? "eye-slash" : "eye")"></i>
                        @(Model.IsVisibleOnProfile ? "Gizle" : "Görünür Yap")
                    </button>
                    
                    <button class="btn btn-danger" 
                            onclick="deleteReview(@Model.Id)">
                        <i class="fas fa-trash"></i> Sil
                    </button>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle"></i> Bilgiler
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <strong>Yorum ID:</strong> @Model.Id
                </div>
                <div class="mb-2">
                    <strong>Kullanıcı ID:</strong> @Model.UserId
                </div>
                <div class="mb-2">
                    <strong>İşletme ID:</strong> @Model.BusinessId
                </div>
                <div class="mb-2">
                    <strong>Puan:</strong> 
                    <div class="d-inline-block">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Model.Rating)
                            {
                                <i class="fas fa-star text-warning"></i>
                            }
                            else
                            {
                                <i class="far fa-star text-muted"></i>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleReviewVisibility(reviewId, isVisible) {
            const action = isVisible ? 'gizlemek' : 'görünür yapmak';
            const message = `Bu yorumu ${action} istediğinizden emin misiniz?`;
            
            if (confirm(message)) {
                fetch(`@Url.Action("ToggleVisibility", "Reviews", new { area = "Admin" })/${reviewId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        AdminPanel.showAlert(data.message, 'success');
                        location.reload();
                    } else {
                        AdminPanel.showAlert(data.message || 'İşlem sırasında bir hata oluştu.', 'danger');
                    }
                })
                .catch(error => {
                    AdminPanel.showAlert('İşlem sırasında bir hata oluştu.', 'danger');
                });
            }
        }

        function deleteReview(reviewId) {
            const message = 'Bu yorumu silmek istediğinizden emin misiniz? Bu işlem geri alınamaz!';
            
            if (confirm(message)) {
                fetch(`@Url.Action("Delete", "Reviews", new { area = "Admin" })/${reviewId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        AdminPanel.showAlert(data.message, 'success');
                        window.location.href = '@Url.Action("Index", "Reviews", new { area = "Admin" })';
                    } else {
                        AdminPanel.showAlert(data.message || 'İşlem sırasında bir hata oluştu.', 'danger');
                    }
                })
                .catch(error => {
                    AdminPanel.showAlert('İşlem sırasında bir hata oluştu.', 'danger');
                });
            }
        }
    </script>
}

