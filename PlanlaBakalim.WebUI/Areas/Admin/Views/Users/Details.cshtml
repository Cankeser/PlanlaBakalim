@model PlanlaBakalim.Core.Entities.User
@{
    ViewData["Title"] = "Kullanıcı Detayları";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="page-title">Kullanıcı Detayları</h1>
                        <p class="page-subtitle">@Model.FullName</p>
                    </div>
                    <div>
                        <a href="@Url.Action("Index", "Users", new { area = "Admin" })" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Geri Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Kullanıcı Bilgileri -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="fas fa-user me-2"></i>Kullanıcı Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        @if (!string.IsNullOrEmpty(Model.ProfileUrl))
                        {
                            <img src="@Model.ProfileUrl" alt="Profil" class="rounded-circle" width="100" height="100">
                        }
                        else
                        {
                            <div class="rounded-circle bg-primary d-inline-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                                <i class="fas fa-user fa-2x text-white"></i>
                            </div>
                        }
                    </div>
                    
                    <table class="table table-borderless">
                        <tr>
                            <td><strong>Ad Soyad:</strong></td>
                            <td>@Model.FullName</td>
                        </tr>
                        <tr>
                            <td><strong>E-posta:</strong></td>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <td><strong>Telefon:</strong></td>
                            <td>@Model.Phone</td>
                        </tr>
                        <tr>
                            <td><strong>Rol:</strong></td>
                            <td>
                                <span class="badge bg-@(Model.Role == PlanlaBakalim.Core.Enums.UserRole.Admin ? "danger" : "info")">
                                    @Model.Role
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Durum:</strong></td>
                            <td>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Pasif</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Kayıt Tarihi:</strong></td>
                            <td>@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                        </tr>
                        @if (Model.UpdatedDate.HasValue)
                        {
                            <tr>
                                <td><strong>Güncelleme:</strong></td>
                                <td>@Model.UpdatedDate.Value.ToString("dd.MM.yyyy HH:mm")</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>

        <!-- Randevular -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="fas fa-calendar me-2"></i>Randevular (@Model.Appointments.Count)
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Appointments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>İşletme</th>
                                        <th>Tarih</th>
                                        <th>Saat</th>
                                        <th>Durum</th>
                                        <th>Not</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model.Appointments.Take(10))
                                    {
                                        <tr>
                                            <td>
                                                <div class="fw-bold">@appointment.Business?.Name</div>
                                                <small class="text-muted">@appointment.Business?.Category?.Name</small>
                                            </td>
                                            <td>@appointment.AppointmentDate.ToString("dd.MM.yyyy")</td>
                                            <td>@appointment.AppointmentTime.ToString("HH:mm")</td>
                                            <td>
                                                @switch (appointment.Status)
                                                {
                                                    case PlanlaBakalim.Core.Enums.AppointmentStatus.Pending:
                                                        <span class="badge bg-warning">Beklemede</span>
                                                        break;
                                                    case PlanlaBakalim.Core.Enums.AppointmentStatus.Confirmed:
                                                        <span class="badge bg-success">Onaylandı</span>
                                                        break;
                                                    case PlanlaBakalim.Core.Enums.AppointmentStatus.Cancelled:
                                                        <span class="badge bg-danger">İptal</span>
                                                        break;
                                                    case PlanlaBakalim.Core.Enums.AppointmentStatus.Completed:
                                                        <span class="badge bg-info">Tamamlandı</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(appointment.Note))
                                                {
                                                    <span class="text-truncate d-inline-block" style="max-width: 150px;" title="@appointment.Note">
                                                        @appointment.Note
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @if (Model.Appointments.Count > 10)
                        {
                            <div class="text-center mt-3">
                                <small class="text-muted">Toplam @Model.Appointments.Count randevu - İlk 10 tanesi gösteriliyor</small>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Bu kullanıcının henüz randevusu yok</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Yorumlar -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="fas fa-comments me-2"></i>Yorumlar (@Model.Reviews.Count)
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Reviews.Any())
                    {
                        <div class="row">
                            @foreach (var review in Model.Reviews.Take(6))
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card border">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <div>
                                                    <strong>@review.Business?.Name</strong>
                                                    <div class="text-warning">
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            <i class="fas fa-star@(i <= review.Rating ? "" : "-o")"></i>
                                                        }
                                                    </div>
                                                </div>
                                                <small class="text-muted">@review.CreatedDate.ToString("dd.MM.yyyy")</small>
                                            </div>
                                            @if (!string.IsNullOrEmpty(review.Comment))
                                            {
                                                <p class="mb-0">@review.Comment</p>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        @if (Model.Reviews.Count > 6)
                        {
                            <div class="text-center mt-3">
                                <small class="text-muted">Toplam @Model.Reviews.Count yorum - İlk 6 tanesi gösteriliyor</small>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-comment-slash fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Bu kullanıcının henüz yorumu yok</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
