@model BusinessUpdateVM
@section Styles {
    <link href="~/BusinessPanel/css/business-info.css" rel="stylesheet" />
}

    <header class="app-header">
        <div class="header-top">
            <div class="header-left">
                <button type="button" class="back-btn" onclick="window.location.href='settings-v2.html'">
                    <i class="bi bi-arrow-left"></i>
                </button>
                <div class="header-title">
                    <h1>İşletme Bilgileri</h1>
                    <p class="header-subtitle">İşletmenizi özelleştirin ve yönetin</p>
                </div>
            </div>
        </div>
    </header>

    <main class="main-content">
        <div class="container">
            <!-- Business Information Section -->
        <form asp-action="Update" asp-controller="BusinessInfo" asp-area="BusinessPanel" method="post" enctype="multipart/form-data" class="business-form">
                @Html.AntiForgeryToken()
            <div class="settings-section info-section">
                <div class="section-header">
                    <div class="section-title">
                        <h3>Temel Bilgiler</h3>
                        <p>İşletmenizin temel bilgilerini girin</p>
                    </div>
                </div>
                <input type="hidden" asp-for="Id">
                <div class="form-grid">
                    <!-- Profile Photo -->
                    <div class="form-group">
                        <div class="photo-section">
                            <div class="current-photo">
                                <img src="@(!string.IsNullOrWhiteSpace(Model.ProfileImageUrl) ? Model.ProfileImageUrl : "")" alt="Profil" id="current-photo" style="max-width:100px; border-radius:50%;">
                                <button type="button" class="change-photo-btn" onclick="document.getElementById('Photo').click()">
                                    <i class="bi bi-camera"></i>
                                </button>
                            </div>
                            <input type="file" asp-for="Photo" accept="image/*" style="display: none;" onchange="handlePhotoChange(event)">
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input type="text" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input type="email" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Website"></label>
                        <input type="url" asp-for="Website" />
                        <span asp-validation-for="Website" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Phone"></label>
                        <input type="tel" asp-for="Phone">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AppointmentSlotDuration"></label>
                        <input type="number" min="15" step="15" asp-for="AppointmentSlotDuration" />
                        <span asp-validation-for="AppointmentSlotDuration" class="text-danger"></span>
                    </div>

                    <div class="form-group full-width">
                        <label asp-for="Address"></label>
                        <textarea asp-for="Address" rows="2"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="address-group">
                        <div class="form-group">
                            <label asp-for="CityId"></label>
                            <select asp-for="CityId">
                                <option value="0">Şehir seçin</option>
                            </select>
                            <span asp-validation-for="CityId" class="validation-message"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="DistrictId"></label>
                            <select asp-for="DistrictId">
                                <option value="0">Önce şehir seçin</option>
                            </select>
                            <span asp-validation-for="DistrictId" class="validation-message"></span>
                        </div>

                    </div>

                    <div class="form-group full-width">
                        <label asp-for="Description"></label>
                        <textarea rows="4" asp-for="Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <div class="char-counter">
                            <span id="charCount">0</span>/500
                        </div>
                    </div>
                </div>
            </div>

            <!-- Save Button Section -->
            <div class="save-section">
                <button type="submit" class="btn btn-success btn-save">
                    <i class="bi bi-check-lg"></i>
                    Tüm Değişiklikleri Kaydet
                </button>
            </div>
           </form>
        </div>
    </main>

@section Scripts {
    <script>
         document.addEventListener('DOMContentLoaded', function () {

            const citySelect = document.getElementById('CityId');
            const districtSelect = document.getElementById('DistrictId');
            const descriptionInput = document.getElementById('Description');
            const charCount = document.getElementById('charCount');
            const photoInput = document.getElementById('Photo');
            const currentPhoto = document.getElementById('current-photo');

            // Mevcut seçili değerler
            const selectedCityId = '@Model.CityId' || '';
            const selectedDistrictId = '@Model.DistrictId' || '';

            // Şehirleri yükle
            fetch('/BusinessPanel/Location/GetCities')
                .then(response => response.json())
                .then(data => {
                    data.forEach(city => {
                        const option = document.createElement('option');
                        option.value = city.id;
                        option.textContent = city.name;
                        if(city.id == selectedCityId) option.selected = true; 
                        citySelect.appendChild(option);
                    });

                    // Eğer seçili şehir varsa, ilçeleri yükle
                    if(selectedCityId) {
                        fetch('/BusinessPanel/Location/GetDistricts?cityId=' + selectedCityId)
                            .then(response => response.json())
                            .then(data => {
                                data.forEach(district => {
                                    const option = document.createElement('option');
                                    option.value = district.id;
                                    option.textContent = district.name;
                                    if(district.id == selectedDistrictId) option.selected = true; 
                                    districtSelect.appendChild(option);
                                });
                            });
                    }
                });


            citySelect.addEventListener('change', function () {
                const cityId = this.value;
                districtSelect.innerHTML = '<option value="">İlçe seçiniz</option>';

                if (cityId) {
                    fetch('/BusinessPanel/Location/GetDistricts?cityId=' + cityId)
                        .then(response => response.json())
                        .then(data => {
                            data.forEach(district => {
                                const option = document.createElement('option');
                                option.value = district.id;
                                option.textContent = district.name;
                                districtSelect.appendChild(option);
                            });
                        });
                }
            });

            // Profil fotoğrafı değişimi
            photoInput.addEventListener('change', function (event) {
                const file = event.target.files[0];
                if(file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        currentPhoto.src = e.target.result;
                    };
                    reader.readAsDataURL(file);
                }
            });

            // Karakter sayacı
            descriptionInput.addEventListener('input', function () {
                charCount.textContent = this.value.length;
            });

            // Başlangıçta karakter sayacı güncelle
            charCount.textContent = descriptionInput.value.length;
        });
    </script>
}