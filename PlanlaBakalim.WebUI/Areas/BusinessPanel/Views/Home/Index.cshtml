@model PlanlaBakalim.WebUI.Areas.BusinessPanel.Models.DashboardVM
@section Styles{
    <link href="~/BusinessPanel/css/dashboard.css" rel="stylesheet" />
}

@Html.AntiForgeryToken()
<header class="app-header">
    <div class="header-top">
        <div class="user-info">
            <div class="user-avatar">
                <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=60&h=60&fit=crop&crop=face" alt="Kullanıcı">
                <div class="status-indicator online"></div>
            </div>
            <div class="user-details">
                <h1>Hoş Geldiniz!</h1>
                <p>@Model.Business.Owner.FullName</p>
            </div>
        </div>
        <div class="header-actions">
            <button class="icon-btn notification-btn" onclick="showNotifications()" aria-label="Bildirimler">
                <i class="bi bi-bell"></i>
                <span class="badge pulse">3</span>
            </button>

        </div>
    </div>
</header>

<!-- Main Content -->
<main class="main-content">
    <div class="container">
        <!-- Stats Row -->
        <div class="stats-grid">
            <div class="stat-card primary-card">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="bi bi-calendar-check-fill"></i>
                    </div>
                    <div class="stat-trend positive">
                        <i class="bi bi-arrow-up"></i>
                        <span>+@Model.TodayAppointmentsCount</span>
                    </div>
                </div>
                <div class="stat-content">
                    <h3 class="stat-number">@Model.TodayAppointmentsCount</h3>
                    <p class="stat-label">Bugünkü Randevu</p>
                    <div class="stat-progress">
                        <div class="progress-bar" style="width: @(Model.TodayAppointmentsCount > 0 ? Math.Min(100, (Model.TodayAppointmentsCount * 10)) : 0)%"></div>
                    </div>
                </div>
            </div>

            <div class="stat-card success-card" role="button" tabindex="0" onclick="window.location.href='@Url.Action("Index", "Appointment", new { area = "BusinessPanel" })'">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="bi bi-clock-fill"></i>
                    </div>
                    <div class="stat-trend positive">
                        <i class="bi bi-arrow-up"></i>
                        <span>+@Model.PendingAppointmentsCount</span>
                    </div>
                </div>
                <div class="stat-content">
                    <h3 class="stat-number">@Model.PendingAppointmentsCount</h3>
                    <p class="stat-label">Onay Bekleyen</p>
                    <div class="stat-progress">
                        <div class="progress-bar" style="width: @(Model.PendingAppointmentsCount > 0 ? Math.Min(100, (Model.PendingAppointmentsCount * 20)) : 0)%"></div>
                    </div>
                </div>
            </div>

            <div class="stat-card warning-card" role="button" tabindex="0" onclick="window.location.href='@Url.Action("Index", "Services", new { area = "BusinessPanel" })'">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="bi bi-tools"></i>
                    </div>
                    <div class="stat-trend neutral">
                        <i class="bi bi-dash"></i>
                        <span>0%</span>
                    </div>
                </div>
                <div class="stat-content">
                    <h3 class="stat-number">@Model.ActiveServicesCount</h3>
                    <p class="stat-label">Aktif Hizmet</p>
                    <div class="stat-progress">
                        <div class="progress-bar" style="width: @(Model.ActiveServicesCount > 0 ? Math.Min(100, (Model.ActiveServicesCount * 12)) : 0)%"></div>
                    </div>
                </div>
            </div>

            <div class="stat-card info-card" role="button" tabindex="0" onclick="window.location.href='@Url.Action("Index", "Employee", new { area = "BusinessPanel" })'">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <div class="stat-trend positive">
                        <i class="bi bi-arrow-up"></i>
                        <span>+2</span>
                    </div>
                </div>
                <div class="stat-content">
                    <h3 class="stat-number">@Model.ActiveEmployeesCount</h3>
                    <p class="stat-label">Aktif Çalışan</p>
                    <div class="stat-progress">
                        <div class="progress-bar" style="width: @(Model.ActiveEmployeesCount > 0 ? Math.Min(100, (Model.ActiveEmployeesCount * 20)) : 0)%"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions and Pending Section -->
        <div class="quick-actions-pending-section">
            <!-- Quick Actions -->
            <div class="quick-actions-section">
                <div class="section-header">
                    <h2>Hızlı İşlemler</h2>
                </div>

                <div class="action-grid">
                    <a href="@Url.Action("Index", "Appointment", new { area = "BusinessPanel" })" class="action-card primary-action">
                        <div class="action-icon">
                            <i class="bi bi-calendar-check-fill"></i>
                        </div>
                        <div class="action-content">
                            <h3 class="action-title">Randevular</h3>
                        </div>
                    </a>

                    <a href="@Url.Action("Index", "Services")" class="action-card success-action">
                        <div class="action-icon">
                            <i class="bi bi-gear-fill"></i>
                        </div>
                        <div class="action-content">
                            <h3 class="action-title">Hizmetler</h3>
                        </div>
                    </a>

                    <a href="@Url.Action("Index", "Employee")" class="action-card warning-action">
                        <div class="action-icon">
                            <i class="bi bi-people-fill"></i>
                        </div>
                        <div class="action-content">
                            <h3 class="action-title">Çalışanlar</h3>
                        </div>
                    </a>

                    <a href="@Url.Action("Index", "Gallery")" class="action-card info-action">
                        <div class="action-icon">
                            <i class="bi bi-images"></i>
                        </div>
                        <div class="action-content">
                            <h3 class="action-title">Galeri</h3>
                        </div>
                    </a>
                </div>
            </div>

            <!-- Pending Approvals Section -->
            <div class="pending-approvals-section">
                <div class="section-header">
                    <h2>Onay Bekleyenler</h2>
                    <div class="header-actions">
                        <a href="@Url.Action("Index", "Appointment", new { area = "BusinessPanel" })" class="view-all-btn">
                            Tümünü Gör
                            <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>

                <div class="pending-list">
                    @if (Model.PendingAppointments.Any())
                    {
                        @foreach (var appointment in Model.PendingAppointments)
                        {
                            var customerName = appointment.User != null ? 
                                appointment.User.FullName : 
                                appointment.GuestFullName ?? "Misafir";
                            
                            var serviceNames = string.Join(", ", appointment.AppointmentServices.Select(aps => aps.Service.Name));
                            var totalPrice = appointment.AppointmentServices.Sum(aps => aps.Service.Price);
                            
                            <div class="pending-item">
                                <div class="pending-avatar">
                                    <img src="@(appointment.User?.ProfileUrl ?? "https://images.unsplash.com/photo-1494790108755-2616b612b786?w=40&h=40&fit=crop&crop=face")" alt="Müşteri">
                                </div>
                                <div class="pending-content">
                                    <h4>@customerName</h4>
                                    <p>@serviceNames - @appointment.AppointmentTime.ToString(@"hh\:mm")</p>
                                    <span class="pending-price">₺@totalPrice.ToString("N0")</span>
                                </div>
                                <div class="pending-actions">
                                    <button class="btn-accept" onclick="acceptAppointment(@appointment.Id)">
                                        <i class="bi bi-check-lg"></i>
                                    </button>
                                    <button class="btn-reject" onclick="rejectAppointment(@appointment.Id)">
                                        <i class="bi bi-x-lg"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="no-data">
                            <p>Onay bekleyen randevu bulunmuyor.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Schedule and Activity Section -->
        <div class="schedule-activity-section">
            <!-- Today's Schedule Section -->
            <div class="schedule-section">
                <div class="section-header">
                    <h2>Bugünkü Program</h2>
                </div>

                <div class="schedule-list">
                    @if (Model.TodayAppointments.Any())
                    {
                        @foreach (var appointment in Model.TodayAppointments)
                        {
                            var customerName = appointment.User != null ? 
                                appointment.User.FullName : 
                                appointment.GuestFullName ?? "Misafir";
                            
                            var serviceNames = string.Join(", ", appointment.AppointmentServices.Select(aps => aps.Service.Name));
                            var totalPrice = appointment.AppointmentServices.Sum(aps => aps.Service.Price);
                            
                            <div class="schedule-item">
                                <div class="schedule-avatar">
                                    <img src="@(appointment.User?.ProfileUrl ?? "https://images.unsplash.com/photo-1494790108755-2616b612b786?w=40&h=40&fit=crop&crop=face")" alt="Müşteri">
                                </div>
                                <div class="schedule-content">
                                    <h4>@customerName</h4>
                                    <p>@serviceNames - @appointment.AppointmentTime.ToString(@"hh\:mm")</p>
                                    <span class="schedule-price">₺@totalPrice.ToString("N0")</span>
                                </div>
                                <div class="schedule-actions">
                                    <span class="schedule-time">@appointment.AppointmentTime.ToString(@"hh\:mm")</span>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="no-data">
                            <p>Bugün için randevu bulunmuyor.</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Recent Activity Section -->
            <div class="activity-section">
                <div class="section-header">
                    <h2>Son Aktiviteler</h2>
                </div>

                <div class="activity-list">
                    @if (Model.RecentActivities.Any())
                    {
                        @foreach (var activity in Model.RecentActivities)
                        {
                            var timeAgo = DateTime.Now - activity.CreatedAt;
                            string timeText;
                            
                            if (timeAgo.TotalMinutes < 60)
                                timeText = $"{(int)timeAgo.TotalMinutes} dk önce";
                            else if (timeAgo.TotalHours < 24)
                                timeText = $"{(int)timeAgo.TotalHours} saat önce";
                            else
                                timeText = $"{(int)timeAgo.TotalDays} gün önce";
                            
                            <div class="activity-item">
                                <div class="activity-icon @activity.ActivityType">
                                    @if (activity.ActivityType == "success")
                                    {
                                        <i class="bi bi-check-circle-fill"></i>
                                    }
                                    else if (activity.ActivityType == "warning")
                                    {
                                        <i class="bi bi-exclamation-triangle-fill"></i>
                                    }
                                    else if (activity.ActivityType == "info")
                                    {
                                        <i class="bi bi-info-circle-fill"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-circle-fill"></i>
                                    }
                                </div>
                                <div class="activity-content">
                                    <h4>@activity.Title</h4>
                                    <p>@activity.Description</p>
                                </div>
                                <div class="activity-time">@timeText</div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="no-data">
                            <p>Henüz aktivite bulunmuyor.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</main>
<div class="notification-modal" id="notificationModal">
    <div class="notification-modal-content">
        <div class="notification-modal-header">
            <h3>Bildirimler</h3>
            <div class="header-actions">
                <button class="close-btn" onclick="closeNotificationModal()">
                    <i class="bi bi-x"></i>
                </button>
            </div>
        </div>
        <div class="notification-modal-body">
            <div class="notification-item unread">
                <div class="notification-content">
                    <h4>Yeni Randevu</h4>
                    <p>Ayşe Yılmaz bugün 14:30'da randevu aldı</p>
                    <div class="notification-time">5 dakika önce</div>
                </div>
            </div>

            <div class="notification-item unread">
                <div class="notification-content">
                    <h4>Ödeme Alındı</h4>
                    <p>₺150 ödeme başarıyla alındı</p>
                    <div class="notification-time">1 saat önce</div>
                </div>
            </div>

            <div class="notification-item">
                <div class="notification-content">
                    <h4>Hizmet Tamamlandı</h4>
                    <p>Araç bakım hizmeti tamamlandı</p>
                    <div class="notification-time">2 saat önce</div>
                </div>
            </div>
        </div>
        <div class="notification-modal-footer">
            <a href="@Url.Action("Index", "Appointment", new { area = "BusinessPanel" })" class="view-all-btn">Tümünü Görüntüle</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function acceptAppointment(appointmentId) {
            fetch('@Url.Action("AcceptAppointment", "Appointment", new { area = "BusinessPanel" })', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ appointmentId: appointmentId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification(data.message, 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showNotification(data.message, 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('Randevu onaylanırken bir hata oluştu.', 'error');
            });
        }

        function rejectAppointment(appointmentId) {
            fetch('@Url.Action("RejectAppointment", "Appointment", new { area = "BusinessPanel" })', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ appointmentId: appointmentId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification(data.message, 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showNotification(data.message, 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('Randevu reddedilirken bir hata oluştu.', 'error');
            });
        }

        function showNotification(message, type) {
            // Basit bir notification sistemi
            const notification = document.createElement('div');
            notification.className = `notification notification-${type}`;
            notification.textContent = message;
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                padding: 15px 20px;
                border-radius: 5px;
                color: white;
                z-index: 9999;
                font-weight: bold;
                animation: slideIn 0.3s ease-out;
            `;
            
            if (type === 'success') {
                notification.style.backgroundColor = '#28a745';
            } else if (type === 'error') {
                notification.style.backgroundColor = '#dc3545';
            }
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        function showNotifications() {
            document.getElementById('notificationModal').style.display = 'block';
        }

        function closeNotificationModal() {
            document.getElementById('notificationModal').style.display = 'none';
        }

        // Modal dışına tıklandığında kapat
        window.onclick = function(event) {
            var modal = document.getElementById('notificationModal');
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        }
    </script>
}
