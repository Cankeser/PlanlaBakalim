@model UserVM
<div class="container">
    <div class="register-container">
        <div class="register-card">
            <div class="register-header">
                <div class="register-icon">
                    <i class="fas fa-user-plus"></i>
                </div>
                <h1>Hesap Oluşturun</h1>
                <p>Planla Bakalım'a katılın ve randevularınızı yönetmeye başlayın</p>
            </div>


            @if (TempData["ErrorMessage"] != null)
            {
                <div class="message-badge error">
                    @TempData["ErrorMessage"]
                </div>
            }

            <form class="register-form" asp-controller="Register" asp-action="Index" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label asp-for="FullName" class="form-label"></label>
                    <input asp-for="FullName" class="form-input">
                    <span asp-validation-for="FullName" class="error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-input">
                    <span asp-validation-for="Email" class="error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Phone" class="form-label"></label>
                    <input asp-for="Phone" class="form-input">
                    <span asp-validation-for="Phone" class="error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label"></label>
                    <div class="password-input-group">
                        <input asp-for="Password" class="form-input">
                        <button type="button" class="password-toggle" id="passwordToggle">
                            <i class="fas fa-eye"></i>
                        </button>                  
                    </div>
                    <span asp-validation-for="Password" class="error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <div class="password-input-group">
                        <input asp-for="ConfirmPassword" class="form-input">
                        <button type="button" class="password-toggle" id="confirmPasswordToggle">
                            <i class="fas fa-eye"></i>
                        </button>    
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-options">
                    <label class="checkbox-container">
                        <input type="checkbox" id="terms" name="terms" required>
                        <span class="terms-text">
                            <a href="#" class="terms-link">Kullanım Koşulları</a> ve
                            <a href="#" class="terms-link">Gizlilik Politikası</a>'nı kabul ediyorum
                        </span>
                    </label>
                </div>

                <button type="submit" class="btn btn-primary register-btn">
                    <i class="fas fa-user-plus"></i>
                    Hesap Oluştur
                </button>
            </form>

            <div class="register-divider">
                <span>veya</span>
            </div>

            <div class="social-login">
                <button class="btn btn-social btn-google">
                    <i class="fab fa-google"></i>
                    Google ile Kayıt Ol
                </button>
                <button class="btn btn-social btn-facebook">
                    <i class="fab fa-facebook-f"></i>
                    Facebook ile Kayıt Ol
                </button>
            </div>

            <div class="register-footer">
                <p>Zaten hesabınız var mı? <a asp-action="Index" asp-controller="Login" class="login-link">Giriş Yap</a></p>
            </div>
        </div>

        <div class="register-illustration">
            <div class="illustration-content">
                <div class="illustration-icon">
                    <i class="fas fa-users"></i>
                </div>
                <h3>Binlerce Kullanıcıya Katılın</h3>
                <p>Planla Bakalım ile randevularınızı kolayca yönetin ve zamanınızı verimli kullanın.</p>
                <div class="login-features-list">
                    <div class="login-feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Ücretsiz hesap oluşturma</span>
                    </div>
                    <div class="login-feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Güvenli ve hızlı</span>
                    </div>
                    <div class="login-feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>7/24 destek</span>
                    </div>
                    <div class="login-feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Mobil uyumlu</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>